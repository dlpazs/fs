{
  "version": "^3.1.6",
  "compilerOptions": {
    "outDir": "../public/dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true
  }
}
