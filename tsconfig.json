{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    // "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
